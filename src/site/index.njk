<section class="live-dashboard">
  <h2 id="live-widget-title">Most Recent Updates</h2>
  <p class="section-intro"><i>The latest from my research sessions and developing notes.</i></p>
  <div id="live-widget">
    <div id="live-now"></div>
    <div id="live-next"></div>
    <div id="live-stream"></div>
  </div>
  <script src="{{ '/assets/js/live-widget.js' | url }}" defer></script>
</section>

<section class="milestones">
  <h2>Upcoming milestones</h2>
  {% set ms = collections.milestones | default([]) %}
  {% if ms | length %}
    <ul>
      {% for m in ms | limit(10)%}
        {% if not m.checked %}
        <li>
          <strong>{{ m.title }}</strong>
          {% if m.due %}
            <small>due <time data-dt="{{ m.due }}">{{ m.due }}</time></small>
          {% endif %}
          {% if m.url %}<a href="{{ m.url }}">view note</a>{% endif %}
        </li>
        {% endif %}
      {% endfor %}
    </ul>
  {% else %}
    <p>No milestones yet. Add <code>- [ ] … #milestone @YYYY-MM-DD</code> to any note.</p>
  {% endif %}
    <p class="more"><a href="{{ '/planning/' | url }}">See more upcoming milestones →</a></p>
</section>

<section class="latest-posts">
  <h2>Latest Posts</h2>
  {% set posts = collections.blog | default([]) %}
  {% if posts | length %}
  <div class="cards-wrap">
    <ul class="cards grid-2x4">
      {% for post in posts | reverse | limit(4) %}
        <li class="card">
          <h3>
            <a href="{{ post.url | url }}">{{ (post.data.title or post.fileSlug) | lower }}</a>
            {% if post.data.featured %}<span class="badge">Featured</span>{% endif %}
          </h3>
          <small><time data-dt="{{ post.date | isoDate }}">{{ post.date | isoDate }}</time></small>
          {% set desc = post.data.description or (post.templateContent | striptags) %}
          <p>{{ desc | truncate(140) }}</p>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No posts yet.</p>
  {% endif %}
  <p class="more"><a href="{{ '/notes/blog/' | url }}">Read all posts →</a></p>
  </div>
</section>

{# Recent notes #}
<section class="recent-notes">
<h2>Recent Notes</h2>
{% set z = collections.zettels | default([]) %}
{% if z | length %}
  <ul class="list">
    {% for n in z | limit(4) %}
      <li>
        <a href="{{ n.url | url }}">{{ (n.data.title or n.fileSlug) | lower }}</a>
        {% if n.data.updated %}
          <small>updated <time data-dt="{{ n.data.updated | isoDate }}">{{ n.data.updated | isoDate }}</time></small>
        {% else %}
          <small><time data-dt="{{ n.date | isoDate }}">{{ n.date | isoDate }}</time></small>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
{% endif %}
  <p class="more"><a href="{{ '/notes/' | url }}">Browse all notes →</a></p>
</section>

<section class="featured-notes">
  <h2>Featured Notes</h2>
  {% set fz = collections.featuredZettels | default([]) %}
  {% if fz | length %}
  <div class="cards-wrap">
    <ul class="cards grid-2x4">
      {% for n in fz | limit(8) %}
        <li class="card">
          <h3>
            <a href="{{ n.url | url }}">{{ (n.data.title or n.fileSlug) | lower }}</a>
            {% if n.data.featured %}<span class="badge">Featured</span>{% endif %}
          </h3>
          {% if n.data.updated %}
            <small>updated <time data-dt="{{ n.data.updated | isoDate }}">{{ n.data.updated | isoDate }}</time></small>
          {% else %}
            <small><time data-dt="{{ n.date | isoDate }}">{{ n.date | isoDate }}</time></small>
          {% endif %}
          {% set desc = n.data.description or (n.templateContent | striptags) %}
          <p>{{ desc | truncate(140) }}</p>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>Add <code>featured: true</code> (or tag <code>gardenEntry</code>) in a note's front matter to feature it here.</p>
  {% endif %}
  </div>
</section>

<section class="zettel-gateway">
  <h2>Explore the Digital Garden</h2>
  <div class="panel">
    <h3>Search</h3>
    <p>All notes connect through the 'digital garden', which maps ideas, reflections, and experiments across my PhD research.</p>
    {% if settings and settings.dgEnableSearch %}
      <p><a class="button" href="{{ '/graph/' | url }}">Search the garden →</a></p>
    {% else %}
      <p><em>Search is disabled. Enable <code>dgEnableSearch</code> in <code>_data/settings.json</code>.</em></p>
    {% endif %}
  </div>
</section>
