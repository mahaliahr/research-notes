<h2>Upcoming</h2>
{% set all = collections.milestones | default([]) %}
{% set upcoming = all | rejectattr("checked") | list %}
{% if upcoming | length %}
  <ul>
    {% for m in upcoming %}
      <li>
        <strong>{{ m.title }}</strong>
        {% if m.due %}<small>due <time data-dt="{{ m.due }}">{{ m.due }}</time></small>{% endif %}
        {% if m.url %}<a href="{{ m.url }}">view note</a>{% endif %}
      </li>
    {% endfor %}
  </ul>
{% else %}
  <p>No upcoming milestones.</p>
{% endif %}

<h2>Completed</h2>
{% set done = all | selectattr("checked") | list %}
{% if done | length %}
  <ul>
    {% for m in done %}
      <li>âœ” <s>{{ m.title }}</s> {% if m.due %}<small>{{ m.due }}</small>{% endif %}</li>
    {% endfor %}
  </ul>
{% else %}
  <p>No completed milestones yet.</p>
{% endif %}
