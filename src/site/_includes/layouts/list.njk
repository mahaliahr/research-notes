{% extends "layouts/base.njk" %}

{% block content %}
<div class="content-wrapper">
  <article class="note blog-list">
    {% if title %}
    <header>
      <h1>{{ title }}</h1>
    </header>
    {% endif %}
    
    <div class="note-content">
      {{ content | safe }}
    </div>
  </article>
</div>
{% endblock %}