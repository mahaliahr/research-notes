---
layout: "list.njk"
title: "Blog Posts"
permalink: "/posts/"
eleventyExcludeFromCollections: true
dgShowSidebar: false
---

{% if collections.posts.length %}
<ul class="posts-list">
  {% for post in collections.posts | reverse %}
  <li>
    <article class="post-preview">
      <h2><a href="{{ post.url }}">{{ post.data.title | default(post.fileSlug) }}</a></h2>
      <div class="post-meta">
        {% if post.data.date %}
          <time datetime="{{ post.data.date | date('iso') }}" data-relative-time>
            {{ post.data.date | date("MMMM dd, yyyy") }}
          </time>
        {% endif %}
      </div>
      {% if post.data.description %}<p>{{ post.data.description }}</p>{% endif %}
    </article>
  </li>
  {% endfor %}
</ul>
{% else %}
<p class="no-data">No posts yet.</p>
{% endif %}